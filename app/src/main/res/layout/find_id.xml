<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <View
            android:id="@+id/find_frame1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/rect"
            app:layout_constraintDimensionRatio="1.6"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/find_frame1"
            app:layout_constraintBottom_toBottomOf="@id/find_frame1"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="e-mail 찾기"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/find_name1"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="닉네임을 입력하세요"
                />
            <Button
                android:id="@+id/find_email_button"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_button"
                android:text="e-mail 찾기"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

        </LinearLayout>
        <View
            android:id="@+id/find_frame2"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/find_frame1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/rect"
            app:layout_constraintDimensionRatio="1.3"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/find_frame2"
            app:layout_constraintBottom_toBottomOf="@id/find_frame2"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 재설정"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/find_name2"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="닉네임을 입력하세요"
                />
            <EditText
                android:id="@+id/find_email"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e-mail을 입력하세요"
                android:inputType="textEmailAddress"
                />
            <Button
                android:id="@+id/find_password_button"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_button"
                android:text="비밀번호 재설정"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>